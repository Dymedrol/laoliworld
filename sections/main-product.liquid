  "name": "t:sections.main-product.name",
  "tag": "section",
  "class": "section",

  "settings": [
    {
      "type": "text",
      "id": "pdp-goback",
      "label": "go back text",
      "default": "go back"
    },
    {
      "type": "text",
      "id": "pdp-size",
      "label": "size text",
      "default": "size"
    },
    {
      "type": "text",
      "id": "pdp-addtocart",
      "label": "add to cart text",
      "default": "add to cart"
    },
    {
      "type": "text",
      "id": "pdp-preorder",
      "label": "pre-order  text",
      "default": "pre-order"
    },
    {
      "type": "text",
      "id": "pdp-details",
      "label": "details text",
      "default": "details"
    },
    {
      "type": "text",
      "id": "pdp-care",
      "label": "care text",
      "default": "care"
    },
    {
      "type": "text",
      "id": "pdp-instock",
      "label": "instock text",
      "default": "in stock"
    },
    {
      "type": "text",
      "id": "pdp-madetoorder",
      "label": "made to order text",
      "default": "made to order"
    },
    {
      "type": "text",
      "id": "pdp-back",
      "label": "back text",
      "default": "back"
    }
  ]
}
{% endschema %}
